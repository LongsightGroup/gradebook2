<?xml version="1.0" encoding="UTF-8"?>
<project>
	<parent>
    	<artifactId>gradebook2-base</artifactId>
    	<groupId>org.sakaiproject</groupId>
    	<version>M2</version>
   		<relativePath>../pom.xml</relativePath>
  	</parent>
  	
	<modelVersion>4.0.0</modelVersion>
	<name>Sakai Gradebook2 War</name>
	<artifactId>gradebook2-war</artifactId>
	<packaging>war</packaging>
	
	<build>
		
		<resources/>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<warSourceDirectory>${basedir}</warSourceDirectory>
                    <webResources>
			            <resource>
			              <directory>${basedir}</directory>
			              <includes>
			                <include>**/*.*</include>
			              </includes>
			              <excludes>
			              	<exclude>**/lib/*.*</exclude>
			              </excludes>
			            </resource>
			        </webResources>
                    <webXml>target/web.xml</webXml>
                </configuration>
			</plugin>
			<plugin>
        		<inherited>true</inherited>
        		<groupId>org.sakaiproject.maven.plugins</groupId>
        		<artifactId>sakai</artifactId>
        		<version>1.0</version>
        		<extensions>true</extensions>
        		<configuration>
          			<deployDirectory>${maven.tomcat.home}</deployDirectory>
          			<warSourceDirectory>${basedir}</warSourceDirectory>
        		</configuration>
      		</plugin>
      		<!-- plugin>
        		<inherited>true</inherited>
        		<groupId>org.apache.maven.plugins</groupId>
        		<artifactId>maven-war-plugin</artifactId>
        		<version>2.0</version>
        		<configuration>
          			<warSourceDirectory>${basedir}</warSourceDirectory>
        		</configuration>
      		</plugin-->
      		<plugin>
        	<inherited>true</inherited>
        		<groupId>org.apache.maven.plugins</groupId>
        		<artifactId>maven-release-plugin</artifactId>
        		<configuration>
                	<tagbase>https://source.sakaiproject.org/svn-test/sakai/tags</tagbase>
            		<preparationGoals>clean verify install</preparationGoals>
            		<autoVersionSubmodules>true</autoVersionSubmodules>
            		<useReleaseProfile>true</useReleaseProfile>
        		</configuration>
       		</plugin>
       	</plugins>
	</build>
	

	<dependencies>	

		<dependency>
            <groupId>tomcat</groupId>
            <artifactId>servlets-default</artifactId>
            <version>5.5.23</version>
            <scope>compile</scope>
        </dependency>

		<dependency>
        	<groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.4</version>
            <scope>compile</scope>
        </dependency>

        
		<!-- SAKAI DEPENDENCIES -->
		<dependency>
  	  		<groupId>org.sakaiproject</groupId>
      		<artifactId>gradebook2-shared</artifactId>
      		<version>${sakai.version}</version>
  		</dependency>
		
		<dependency>
  	  		<groupId>org.sakaiproject</groupId>
      		<artifactId>gradebook2-model</artifactId>
      		<version>${sakai.version}</version>
      		<scope>provided</scope>
  		</dependency>
  	
		<dependency>
      		<groupId>org.sakaiproject</groupId>
      		<artifactId>gradebook2-api</artifactId>
      		<version>${sakai.version}</version>
      		<scope>provided</scope>
   		</dependency>
   		
   		<dependency>
  	  		<groupId>org.sakaiproject</groupId>
      		<artifactId>gradebook2-server</artifactId>
      		<version>${sakai.version}</version>
  		</dependency>
	
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.1</version>
			<scope>test</scope>
		</dependency>

	</dependencies>	
</project>

